{
  "name": "bookmarks-server",
  "version": "1.0.0",
  "description": "Express TypeScript server for bookmarks application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch --exclude '../client/dist/**' --exclude '../client/node_modules/**' --exclude 'node_modules/**' --exclude 'dist/**' src/dev.ts",
    "dev:only": "tsx watch --exclude '../client/dist/**' --exclude '../client/node_modules/**' --exclude 'node_modules/**' --exclude 'dist/**' src/dev.ts",
    "prod:dev": "tsx watch --exclude 'node_modules/**' --exclude 'dist/**' src/prod.ts",
    "build": "tsc",
    "start": "node dist/prod.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:setup": "tsx src/db/setup.ts",
    "db:reset": "rm -f data/bookmarks.db* && npm run db:setup",
    "db:backup": "cp data/bookmarks.db data/bookmarks.db.backup-$(date +%Y%m%d-%H%M%S)"
  },
  "keywords": [
    "express",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "express": "^4.18.2",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.10",
    "tsx": "^4.20.4",
    "typescript": "^5.3.3",
    "vite": "^7.1.1"
  }
}
