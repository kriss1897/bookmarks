{
  "name": "bookmarks-server",
  "version": "1.0.0",
  "description": "Express TypeScript server for bookmarks application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch --exclude '../client/dist/**' --exclude '../client/node_modules/**' --exclude 'node_modules/**' --exclude 'dist/**' src/dev.ts",
    "dev:only": "tsx watch --exclude '../client/dist/**' --exclude '../client/node_modules/**' --exclude 'node_modules/**' --exclude 'dist/**' src/dev.ts",
    "prod:dev": "tsx watch --exclude 'node_modules/**' --exclude 'dist/**' src/prod.ts",
    "build": "tsc",
    "start": "node dist/prod.js",
    "start:dev": "node dist/dev.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "express",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.10",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite": "^7.1.1"
  }
}
